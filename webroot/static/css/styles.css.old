body {
    font-family: cursive, fantasy;
    margin: 0;
    padding: 0;
}

header {
    background-color: #eda7e6;
    padding: 20px;
    text-align: center;
}

h1 {
    color: #030303;
}

footer {
    background-color: #faafea;
    color: #000000;
    text-align: center;
    padding: 10px 0;
}


.nav-menu {
    background-color: #faafea;
    padding: 10px 0;
}

.nav-menu ul {
    display: flex;
    justify-content: space-around;
    list-style-type: none;
    padding: 0;
}

.nav-menu ul li {
    background-color: #f388eb;
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 10px;
    margin: 5px;
}

.nav-menu ul li a {
    color: #fff;
    text-decoration: none;
    transition: color 0.3s ease; /* Smooth color transition */
}

.nav-menu ul li a:hover {
    color: #000000; /* Change color on hover */
}

.main-header {
    background-image: url("https://media.istockphoto.com/id/1433418099/photo/flower-background-with-roses-ranunculus-pumpkin-hypericum-chrysanthemum-spring-summer-floral.webp?b=1&s=170667a&w=0&k=20&c=ms38CQfF0oVbCjVkRK9UGF7R_kFYnIe0slQgnZWdT44=");
    background-size: cover; /* or 100% if you want it to stretch across */
    height: 500px; /* Adjust height as needed */
}

